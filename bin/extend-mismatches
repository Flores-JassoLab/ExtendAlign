#!/usr/bin/awk -f
# The output file is described at
@include "ea_format.awk"
#
# No extension is needed when
$alignment_length == $query_length {
#
# So we just complete the missing fields and print the line.
#
	$query_5_seq = $query_3_seq = $subj_5_seq = $subj_3_seq = NA
	print $0
}
# Extension needs to be performed in the alternative case
# but is different for each strandness.
#
#
$strand == "plus" {
# Define 5 prime overhang
# query start is column 6
# check if query start is 1, then overhang is NA
# else, overhnag can be calculated for query
	if ($query_start == 1) {
		query_5_seq = "NA"
		subj_5_seq = "NA"
	} else {
		query_5_seq_start = 1
		query_5_seq_end = $query_start-1
		## use substring to split column 26 (query fasta seq), into characters, and recover bases from 1 to query end 5 prime extension
		query_5_seq = substr($26, query_5_seq_start, query_5_seq_end)
		## sstart is column 8
		subj_5_seq_start = ($subj_start - query_5_seq_end) ## should be sstart - query_5_seq_end
		subj_5_seq_end = ($subj_start - 1) ## should be sstart - 1
		##subj_5_seq = "Shang5_calculated" ## calculating with samtools faidx
		## Reference contig is column 1
		## Build samtools faidx command
		cmd = (" samtools faidx $REFERENCE "$1":"subj_5_seq_start"-"subj_5_seq_end" | tail -n1 | tr '[:lower:]' '[:upper:]'")
		cmd | getline subj_5_seq
		close (cmd)
	}
# Define 3 prime overhang
# query end is column 7
# query legth is column 16
# check if query ends at query total length, then overhang is NA
# else, overhang is calculated for query
	if ( $query_end == $query_length ) {
		query_3_seq = NA
		subj_3_seq = NA
	} else {
		query_3_seq_start = $query_end + 1
		query_3_seq_end = $query_length
		query_3_seq = substr($26, query_3_seq_start, query_3_seq_end)
		## Calculate Subject 3prime hang
		## Subject end is column 9
		## thus, extension starts at end+1
		subj_3_seq_start = $subj_end+1
		## extension ends at subject end + ( query_3_seq_end - query_3_seq_start )
		## alternatively could be equal to subject end + number of characters at query_3_seq
		subj_3_seq_end = $subj_end + length(query_3_seq)
		##subj_3_seq = "Shang3_calculated" ## calculating with samtools faidx
		## Reference contig is column 1
		## Build samtools faidx command
		cmd = (" samtools faidx $REFERENCE "$1":"subj_3_seq_start"-"subj_3_seq_end" | tail -n1 | tr '[:lower:]' '[:upper:]'")
		cmd | getline subj_3_seq
		close (cmd)
	}
## uncomment for debugg ## print "calculate someshit, NO STRAND CORRECTION REQUIRED", "seq:"$26, "mismatches:"$4, "gapopen:"$gapopen, "qstart:"$query_start, "qend:"$query_end, "aln_len:"$alignment_length , "contig:"$1, "substart:"$subj_start, "subend:"$subj_end, "qlen:"$query_length, $strand, "qhang5: "query_5_seq, "qhang3:"query_3_seq, "shang5:"subj_5_seq, "shang3:"subj_3_seq
print query_5_seq, query_3_seq, subj_5_seq, subj_3_seq, $0
}
$strand == "minus" {
## For minus strand, query hangs both 5 and 3, are calculated the same as for plus strand
## For minus strand, subject extension should be extracted differently... not sure how yet
# Define 5 prime overhang
	if ($query_start == 1) {
		query_5_seq = "NA"
		subj_5_seq = "NA"
	} else {
		query_5_seq_start = 1
		query_5_seq_end = $query_start-1
		## use substring to split column 26 (query fasta seq), into characters, and recover bases from 1 to query end 5 prime extension
		query_5_seq = substr($26, query_5_seq_start, query_5_seq_end)
	## must get creative with how to extract the correct 5 overhang for subjects in the minus strand
	## The secret is in extracting the reference plus 3overhang, and reverse complement it
	## That makes it comparable to the reported query 5sequence
		#subj_5_seq = "5hang_calculated"
		## sstart is column 8
		subj_5_seq_start = ($subj_start + 1) ## should be sstart + 1 since it is reported in minus strand
		subj_5_seq_end = ($subj_start + length(query_5_seq) ) ## should be sstart + the number of nucleotides extracted for the query
		##subj_5_seq = "Shang5_calculated" ## calculating with samtools faidx
		## Reference contig is column 1
		## Build samtools faidx command
		cmd = (" samtools faidx $REFERENCE "$1":"subj_5_seq_start"-"subj_5_seq_end" | tail -n1 | tr '[:lower:]' '[:upper:]' | rev | tr 'ATCG' 'TAGC' ")
		cmd | getline subj_5_seq
		close (cmd)
	}
# Define 3 prime overhang
	if ( $query_end == $query_length ) {
		query_3_seq = "NA"
		subj_3_seq = "NA"
	} else {
		query_3_seq_start = $query_end+1
		query_3_seq_end = $query_length
		query_3_seq = substr($26, query_3_seq_start, query_3_seq_end)
	## must get creative again to extract subject 3 overhang from the minus strand
	## The secret is in extracting the reference plus 5overhang, and reverse complement it
	## That makes it comparable to the reported query 3sequence
		#subj_3_seq = "3hang_calculated"
		## Subject end is column 9
		## thus, extension for minus starts at subend - length of query_3_seq
		subj_3_seq_start = ($subj_end - length(query_3_seq) )
		## extension ends at subject end - 1
		subj_3_seq_end = ($subj_end - 1)
		##subj_3_seq = "Shang3_calculated" ## calculating with samtools faidx
		## Reference contig is column 1
		## Build samtools faidx command
		cmd = (" samtools faidx $REFERENCE "$1":"subj_3_seq_start"-"subj_3_seq_end" | tail -n1 | tr '[:lower:]' '[:upper:]' | rev | tr 'ATCG' 'TAGC' ")
		cmd | getline subj_3_seq
		close (cmd)
	}
## uncomment for debugg ## print "STRAND CORRECTION REQUIRED", "seq:"$26, "mismatches:"$4, "gapopen:"$gapopen, "qstart:"$query_start, "qend:"$query_end, "aln_len:"$alignment_length , "contig:"$1, "substart:"$subj_start, "subend:"$subj_end, "qlen:"$query_length, $strand, "qhang5: "query_5_seq, "qhang3:"query_3_seq, "shang5:"subj_5_seq, "shang3:"subj_3_seq
print query_5_seq, query_3_seq, subj_5_seq, subj_3_seq, $0
}
